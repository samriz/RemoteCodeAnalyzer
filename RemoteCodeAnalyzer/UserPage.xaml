<Page x:Class="RemoteCodeAnalyzer.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemoteCodeAnalyzer"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="User">

    <Canvas Background="AliceBlue">
        <Label Name="FullNameLabel" Height="Auto" VerticalAlignment="Top" Width="Auto" FontSize="20"/>
        <Button Name="SearchFiles" Content="Search" Width="75" Height="20" RenderTransformOrigin="0.496,-3.53" Canvas.Left="10" Canvas.Top="72" Click="SearchFiles_Click"/>
        <ProgressBar Name="progress" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="476" ValueChanged="progress_ValueChanged" RenderTransformOrigin="0.51,-0.373" Canvas.Left="62" Canvas.Top="365"/>
        <Button x:Name="UploadFiles" Content="Upload" Width="75" Height="20" RenderTransformOrigin="0.496,-3.53" Canvas.Left="90" Canvas.Top="72"/>
        <!--<Label Name="label" Content="Label" HorizontalAlignment="Left" Margin="682,10,0,0" VerticalAlignment="Top" Height="48" Width="100"/>-->
    </Canvas>
</Page>