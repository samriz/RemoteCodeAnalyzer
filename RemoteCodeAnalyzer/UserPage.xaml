<Page x:Class="RemoteCodeAnalyzer.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemoteCodeAnalyzer"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="User">

    <ScrollViewer Height="Auto" Width="Auto" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Canvas Height="600" Width="800" Background="AliceBlue">
            <Label Name="FullNameLabel" VerticalAlignment="Top" HorizontalAlignment="Center" Height="Auto" Width="Auto" FontSize="20"/>
            <Button Name="SearchFiles" Content="Search" Width="100" Height="25" RenderTransformOrigin="0.496,-3.53" Canvas.Left="10" Canvas.Top="100" Click="SearchFiles_Click"/>
            <Label Name="FolderPathLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Canvas.Left="126" Canvas.Top="75"/>
            <Button x:Name="UploadFiles" Content="Upload" Width="100" Height="25" RenderTransformOrigin="0.496,-3.53" Canvas.Left="10" Canvas.Top="130" Click="UploadFiles_Click"/>
            <TextBox Name="ProjectNameTextBox" Text="Project Name" Height="23" TextWrapping="Wrap" Canvas.Top="72" Width="120" RenderTransformOrigin="-0.24,0.017" Canvas.Left="1" IsMouseDirectlyOverChanged="ProjectNameTextBox_ActivateOnClick"/>
            <ListBox Name ="FilesList" Height="Auto" Canvas.Left="10" Canvas.Top="303" Width="Auto" MaxWidth="250" RenderTransformOrigin="0.104,-0.36" SelectionChanged="FilesList_SelectionChanged"/>
            <!--<ListView Name="FilesList" Height="Auto" Canvas.Left="10" Canvas.Top="176" Width="Auto" MaxWidth="250" RenderTransformOrigin="0.104,-0.36" SelectionChanged="FilesList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>-->
            <ListView Name="AnalysisResultsGrid" Height="287" Canvas.Left="509" Canvas.Top="303" Width="281"/>
            <TextBlock Name="ErrorMessage" Canvas.Left="10" Canvas.Top="160" RenderTransformOrigin="-0.052,0.047" FontSize="10" FontStyle="Italic" Foreground="Red"/>
            <!--<ProgressBar Name="progress" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="669" ValueChanged="progress_ValueChanged" RenderTransformOrigin="0.51,-0.373" Canvas.Left="62" Canvas.Top="365"/>-->
        </Canvas>
    </ScrollViewer>
</Page>