<Page x:Class="RemoteCodeAnalyzer.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemoteCodeAnalyzer"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="User">

    <Canvas Background="AliceBlue">
        <Label Name="FullNameLabel" Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Center" Width="Auto" FontSize="20"/>
        <Button Name="SearchFiles" Content="Search" Width="100" Height="25" RenderTransformOrigin="0.496,-3.53" Canvas.Left="10" Canvas.Top="72" Click="SearchFiles_Click"/>
        <Label Name="FolderPathLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Canvas.Left="126" Canvas.Top="75"/>
        <Button x:Name="UploadFiles" Content="Upload" Width="100" Height="25" RenderTransformOrigin="0.496,-3.53" Canvas.Left="10" Canvas.Top="102" Click="UploadFiles_Click"/>
        <ListView Name="FilesList" Height="Auto" Canvas.Left="10" Canvas.Top="176" Width="Auto" MaxWidth="250" RenderTransformOrigin="0.104,-0.36" SelectionChanged="FilesList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <DataGrid Name="AnalysisResultsGrid" Height="287" Canvas.Left="445" Canvas.Top="176" Width="281"/>
        <!--<ProgressBar Name="progress" HorizontalAlignment="Left" Height="25" VerticalAlignment="Bottom" Width="669" ValueChanged="progress_ValueChanged" RenderTransformOrigin="0.51,-0.373" Canvas.Left="62" Canvas.Top="365"/>-->
    </Canvas>
</Page>