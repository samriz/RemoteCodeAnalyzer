<Page x:Class="RemoteCodeAnalyzer.LoginOrCreateAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RemoteCodeAnalyzer"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="LoginOrCreateAccount">

    <DockPanel Height="400" Width="600" Background="AliceBlue" IsMouseDirectlyOverChanged="DockPanel_IsMouseDirectlyOverChanged">
        <DockPanel.Resources>
            <XmlDataProvider x:Key="UsersData" Source="Users.xml" XPath="Users"/>
        </DockPanel.Resources>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File"/>
        </Menu>
        <GroupBox x:Name="loginBox" Height="120" VerticalAlignment="Center" HorizontalAlignment="Right" Width="300" DockPanel.Dock="Right">
            <StackPanel Orientation="Vertical">
                <Label Content="Already have an account?"/>
                <Label Content="Sign in:" />
                <TextBox Name="EmailTextBox" Width="100" HorizontalAlignment="Left" IsMouseDirectlyOverChanged="EmailTextBox_IsMouseDirectlyOverChanged">
                    Email
                </TextBox>
                <TextBox Name="PasswordTextBox" Width="100" HorizontalAlignment="Left" IsMouseDirectlyOverChanged="PasswordTextBox_IsMouseDirectlyOverChanged">
                    Password
                </TextBox>
                <Button Content="Login" Width="100" HorizontalAlignment="Left" Click="Login_Click"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="newAccountBox" Height="120" VerticalAlignment="Center" HorizontalAlignment="Left" Width="300" DockPanel.Dock="Left">
            <StackPanel Orientation="Vertical">
                <Label Content="Don't have an account?" HorizontalAlignment="Center"/>
                <Label Content="Create a new one:" HorizontalAlignment="Center"/>
                <Button Content="Create" Width="100" HorizontalAlignment="Center" Click="Create_Click"/>
            </StackPanel>
        </GroupBox>

